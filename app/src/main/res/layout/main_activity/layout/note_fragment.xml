<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/id_fragment_one_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="404dp"
        android:layout_marginStart="16dp"
        android:text="submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_fragment_textview" />

    <TextView
        android:id="@+id/note_fragment_textview"
        android:layout_width="158dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="note fragment"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/id_fragment_one_btn"
        app:layout_constraintStart_toStartOf="@+id/id_fragment_one_btn"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>