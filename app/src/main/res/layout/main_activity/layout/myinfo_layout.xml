<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:layout_marginTop="50dp"
    tools:context="com.example.a526.ssj.mainactivity.myinformationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFF"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/user_image"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/h_head"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFF"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/user_image"
        android:id="@+id/user_name"
        >
        <TextView
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:text="昵称"
            android:gravity="center"
            android:textColor="#000"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:text="内测"
            android:gravity="center"
            android:paddingRight="10dp"
            android:id="@+id/name"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"
        android:layout_below="@id/user_name"
        android:id="@+id/line1"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFF"
        android:layout_below="@+id/line1"
        android:id="@+id/user_gender"
        >
        <TextView
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:text="性别"
            android:gravity="center"
            android:textColor="#000"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:text="男"
            android:gravity="center"
            android:paddingRight="10dp"
            android:id="@+id/gender"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"
        android:layout_below="@+id/user_gender"
        android:id="@+id/line2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFF"
        android:layout_below="@+id/line2"
        android:id="@+id/user_birth"
        >
        <TextView

            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:text="邮箱"
            android:gravity="center"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/txt_mine_email"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="123@qq.com"
            android:gravity="center"
            android:paddingRight="10dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/user_birth"
        android:layout_marginTop="20dp"
        android:background="#FFF"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_myifo_quit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:layout_marginRight="10dp"
            android:text="退出登录"
            android:textColor="#000" />
    </LinearLayout>
</RelativeLayout>